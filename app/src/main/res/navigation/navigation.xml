<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/backendFragment">

    <fragment
        android:id="@+id/bulletinBoardFragment"
        android:name="com.example.faithandroid.BulletinboardFragment"
        android:label="bulletinboard"
        tools:layout="@layout/fragment_bulletinboard" >

        <action
            android:id="@+id/action_bulletinBoardFragment_to_optionsAddPostFragment"
            app:destination="@id/optionsAddPostFragment" />
    </fragment>
    <fragment
        android:id="@+id/optionsAddPostFragment"
        android:name="com.example.faithandroid.OptionsAddPostFragment"
        android:label="options_add_post"
        tools:layout="@layout/options_add_post" >
        <action
            android:id="@+id/action_optionsAddPostFragment_to_bulletinBoardFragment"
            app:destination="@id/bulletinBoardFragment" />

    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.faithandroid.LoginFragment"
        android:label="LoginFragment" >

        <action

            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.faithandroid.HomeFragment"
        android:label="menu_homescherm"
        tools:layout="@layout/menu_homescherm" >
        <action
            android:id="@+id/action_homeFragment_to_backpackFragment"
            app:destination="@id/backpackFragment" />
        <action
            android:id="@+id/action_homeFragment_to_billboardFragment"
            app:destination="@id/billboardFragment" />
        <action
            android:id="@+id/action_homeFragment_to_bulletinBoardFragment"
            app:destination="@id/bulletinBoardFragment" />
        <action
            android:id="@+id/action_homeFragment_to_cinemaFragment"
            app:destination="@id/cinemaFragment" />
        <action
            android:id="@+id/action_homeFragment_to_musicRoomFragment"
            app:destination="@id/musicRoomFragment" />
        <action
            android:id="@+id/action_homeFragment_to_shoppingCenterFragment"
            app:destination="@id/shoppingCenterFragment" />
        <action
            android:id="@+id/action_homeFragment_to_skyscraperFragment"
            app:destination="@id/skyscraperFragment" />
        <action
            android:id="@+id/action_homeFragment_to_treasureChestFragment"
            app:destination="@id/treasureChestFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/backendFragment"
        android:name="com.example.faithandroid.BackendFragment"
        android:label="BackendFragment" />
    <fragment
        android:id="@+id/text_post_toevoegen"
        android:name="com.example.faithandroid.text_post_toevoegen"
        android:label="text_post_toevoegen">
        <action
            android:id="@+id/action_text_post_toevoegen_to_bulletinBoardFragment"
            app:destination="@id/bulletinBoardFragment" />
    </fragment>
    <fragment
        android:id="@+id/backpackFragment"
        android:name="com.example.faithandroid.BackpackFragment"
        android:label="BackpackFragment"
        tools:layout="@layout/fragment_backpack"/>
    <fragment
        android:id="@+id/billboardFragment"
        android:name="com.example.faithandroid.BillboardFragment"
        android:label="BillboardFragment"
        tools:layout="@layout/fragment_billboard"/>
    <fragment
        android:id="@+id/cinemaFragment"
        android:name="com.example.faithandroid.CinemaFragment"
        android:label="CinemaFragment"
        tools:layout="@layout/fragment_cinema"/>
    <fragment
        android:id="@+id/musicRoomFragment"
        android:name="com.example.faithandroid.MusicRoomFragment"
        android:label="MusicRoomFragment"
        tools:layout="@layout/fragment_musicroom"/>
    <fragment
        android:id="@+id/shoppingCenterFragment"
        android:name="com.example.faithandroid.ShoppingCenterFragment"
        android:label="ShoppingCenterFragment"
        tools:layout="@layout/fragment_shoppingcenter"/>
    <fragment
        android:id="@+id/skyscraperFragment"
        android:name="com.example.faithandroid.SkyscraperFragment"
        android:label="SkyscraperFragment"
        tools:layout="@layout/fragment_skyscraper"/>
    <fragment
        android:id="@+id/treasureChestFragment"
        android:name="com.example.faithandroid.TreasureChestFragment"
        android:label="TreasureChestFragment"
        tools:layout="@layout/fragment_treasurechest"/>

</navigation>
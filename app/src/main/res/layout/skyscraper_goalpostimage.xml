<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

     <variable
        name="goal"
        type="com.example.faithandroid.models.GoalPost" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">


    <ImageView
        android:id="@+id/bellySkyscraper"
        android:layout_width="410dp"
        android:layout_height="139dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"

        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/belly_skyscraper1" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:clickable="true"
        app:cardBackgroundColor="@{goal.completed ? @android:color/darker_gray:  @android:color/holo_red_dark}"
        app:layout_constraintBottom_toBottomOf="@+id/bellySkyscraper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bellySkyscraper"
        >

        <LinearLayout
            android:id="@+id/layout"
            android:minWidth="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"

            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="7dp"
            android:paddingTop="12dp"
            android:paddingRight="7dp"
            android:paddingBottom="12dp">

            <!-- Title, secondary and supporting text -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="DummyText"
                android:textAppearance="?attr/textAppearanceHeadline6"

                android:textSize="16dp" />
            <!--<TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="DummyText"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="?android:attr/textColorSecondary"
                    />-->

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
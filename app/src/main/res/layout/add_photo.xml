<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.faithandroid.PostViewModel" />
    </data>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <include
            layout="@layout/app_bar_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

            <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:orientation="vertical"
            android:layout_marginTop="?attr/actionBarSize">


                <LinearLayout
                    android:id="@+id/linLay1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linLay2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconPhoto"
                        android:layout_width="76dp"
                        android:layout_height="63dp"
                        android:contentDescription="@string/camera"
                        app:srcCompat="@drawable/ic_camera" />

                    <ImageView
                        android:id="@+id/IconFolder"
                        android:layout_width="76dp"
                        android:layout_height="63dp"
                        android:contentDescription="@string/camerafolder"
                        app:srcCompat="@drawable/ic_folder" />


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:hint="@string/plaatsen"
                        android:layout_marginLeft="10dp">

                        <AutoCompleteTextView
                            android:id="@+id/dropdownPlaatsen"

                            android:inputType="none"
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:textColorHint="#FFFFFF" />


                    </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/titleFieldImage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="8dp"
                            android:hint="@string/vul_hier_je_titel_in"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/linLay2">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/titelImage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true" />


                        </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/addImageRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:TreasurechestlistData="@{viewModel.postList}"
                        app:spanCount="2"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"></androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
            </FrameLayout>
        </FrameLayout>
</layout>
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fadingEdgeLength="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        <import type="android.view.View" />
        <variable
            name="post"
            type="com.example.faithandroid.models.Post" />
        <variable
            name="date"
            type="String" />
        <variable
            name="posttype"
            type="com.example.faithandroid.models.PostType" />
    </data>

    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/treasurechestCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fadingEdgeLength="10dp">

                <!--TEXTPOST-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:visibility='@{post.PostType == posttype.Text.ordinal()?View.VISIBLE:View.GONE}'
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TreasurechestTextTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="@{post.title}"
                        android:textColor="@android:color/black"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TreasurechestTextContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text='@{post.data.length() >= 49? post.data.substring(0, 50) + "...": post.data}'
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <!--Imagepost-->
                <ImageView
                    android:id="@+id/TreasurechestImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility='@{post.PostType == posttype.Image.ordinal()?View.VISIBLE:View.GONE}'
                    android:scaleType="centerCrop"
                    />

                <!--Videopost-->
                <ImageView
                    android:id="@+id/TreasurechestVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility='@{post.PostType == posttype.Video.ordinal()?View.VISIBLE:View.GONE}'
                    android:src="@drawable/cinema"/>

                <!--Audiopost-->
                <ImageView
                    android:id="@+id/TreasurechestAudio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility='@{post.PostType == posttype.Audio.ordinal()?View.VISIBLE:View.GONE}'
                    android:src="@drawable/sound" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/app_bar_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="#FFFFFF"
                android:elevation="10dp"   >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wat wil je toevoegen?"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Nieuw:"
                        android:textSize="16sp"

                        />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="2">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <Button
                                android:id="@+id/AudioButton"
                                style="@style/buttonStyle"
                                android:layout_width="137dp"
                                android:layout_height="72dp"
                                android:layout_marginEnd="5dp"
                                android:clickable="false"
                                android:text="@string/audio" />

                            <Button
                                android:id="@+id/FotoButton"
                                style="@style/buttonStyle"
                                android:layout_width="137dp"
                                android:layout_height="72dp"
                                android:clickable="false"
                                android:text="@string/Image" />


                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <Button
                                android:id="@+id/VideoButton"
                                style="@style/buttonStyle"
                                android:layout_width="137dp"
                                android:layout_height="72dp"
                                android:layout_marginEnd="5dp"
                                android:clickable="false"
                                android:text="@string/video" />

                            <Button
                                android:id="@+id/TekstButton"
                                style="@style/buttonStyle"
                                android:layout_width="137dp"
                                android:layout_height="72dp"
                                android:text="@string/text"
                                android:clickable="true" />


                        </TableRow>


                    </TableLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Van opgeslagen plaatsen:"
                        android:textSize="16sp"

                        />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="2">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <Button
                                android:id="@+id/wolkenkrabberButton"
                                style="@style/buttonStyle"
                                android:layout_width="137dp"
                                android:layout_height="72dp"
                                android:layout_marginEnd="7dp"
                                android:clickable="false"
                                android:text="@string/skyscraper" />

                            <Button
                                android:id="@+id/cinemaButton"
                                style="@style/buttonStyle"
                                android:layout_width="137dp"
                                android:layout_height="72dp"
                                android:clickable="false"
                                android:text="@string/cinema" />


                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <Button
                                android:id="@+id/schatkistButton"
                                style="@style/buttonStyle"
                                android:layout_width="137dp"
                                android:layout_height="72dp"
                                android:layout_marginEnd="7dp"
                                android:clickable="false"
                                android:text="@string/treasure_chest" />

                            <Button
                                android:id="@+id/rugzakButton"
                                style="@style/buttonStyle"
                                android:layout_width="137dp"
                                android:layout_height="72dp"
                                android:clickable="false"
                                android:text="@string/backpack" />


                        </TableRow>


                    </TableLayout>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/annuleren"
                        android:id="@+id/annuleren_post"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</layout>




<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/include"
            layout="@layout/app_bar_back"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include">


            <TextView
                android:id="@+id/lblTitleDoel"
                android:layout_width="132dp"
                android:layout_height="16dp"
                android:layout_marginBottom="8dp"
                android:text="@string/title_goal"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                app:layout_constraintBottom_toTopOf="@+id/titleDoelText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.07"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/titleDoelText"
                android:layout_width="match_parent"
                android:layout_height="48dp"

                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lblDescriptionDoel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_description_goal"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                app:layout_constraintBottom_toTopOf="@+id/beschrijvingText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.07"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleDoelText"
                app:layout_constraintVertical_bias="0.487" />

            <EditText
                android:id="@+id/descriptionDoelText"
                android:layout_width="match_parent"
                android:layout_height="70dp"

                android:gravity="start|top"
                android:inputType="textMultiLine|textImeMultiLine"
                android:lines="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleDoelText"
                app:layout_constraintVertical_bias="0.071" />

            <TextView
                android:id="@+id/AddNewStap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/add_a_step"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.07"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/descriptionDoelText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/stepText"
                    android:layout_width="305dp"
                    android:layout_height="41dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/AddNewStap" />

                <Button
                    android:id="@+id/addStepButton"
                    android:layout_width="47dp"
                    android:layout_height="41dp"
                    android:layout_marginLeft="7dp"
                    android:text="+"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/stepText"
                    app:layout_constraintTop_toBottomOf="@+id/descriptionDoelText" />
            </LinearLayout>

            <TextView
                android:id="@+id/lblSteps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/lbl_list_goalsteps"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.07"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stepText" />

            <LinearLayout
                android:id="@+id/stepList"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginBottom="7dp"
                android:orientation="vertical" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/annuleerButton"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="@string/annuleren" />

                <Button
                    android:id="@+id/voegToeButton"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/add_new_goal" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>